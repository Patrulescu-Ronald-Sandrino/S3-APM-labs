<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.ProgramSelectionController"
      prefHeight="400.0" prefWidth="600.0"
      alignment="CENTER"
      stylesheets="@programSelection.css">

    <children>
        <ListView fx:id="interpretersListView" editable="true"/>
        <HBox alignment="BOTTOM_LEFT">
            <children>
                <!-- The '_' in front of 'L' in the `text` property is to be able
                 to press Alt + L (Linux) instead of clicking on the button.
                 I think they are called `mnemonics`. -->
                <Button fx:id="loadButton" text="_Load"/>
            </children>
        </HBox>
    </children>
</VBox>
